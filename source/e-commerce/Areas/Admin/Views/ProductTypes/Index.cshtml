@using e_commerce.Models;
@model IEnumerable<ProductTypes>

@{
    ViewData["Title"] = "Категория";
}


<br />

<div class="container">

    <h2 class="text-dark text-center">Список категорий</h2> <br />

    <div class="row">
        <div class="col-6">
            <a asp-action="Create" class="btn btn-light btn-outline-dark">&nbsp; Добавить категорию</a>
        </div>
    </div> <br />

    <div>

        <table class="table table-striped border">

            <thead class="thead-dark">

                <tr class="table">
                    <th>
                        @Html.DisplayNameFor(expression: c => c.ProductType)
                    </th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
             {
                 <tr>
                     <td>@item.ProductType</td>
                     <td>
                         <a asp-action="Edit"    asp-controller="ProductTypes" class="btn btn-light btn-outline-secondary" asp-route-id="@item.Id">Редактировать</a>
                         <a asp-action="Details" asp-controller="ProductTypes" class="btn btn-light btn-outline-secondary" asp-route-id="@item.Id">Инфо.</a>
                         <a asp-action="Delete"  asp-controller="ProductTypes" class="btn btn-light btn-outline-danger"    asp-route-id="@item.Id">Удалить</a>
                     </td>
                 </tr>
             }            

        </table>

    </div>

</div>