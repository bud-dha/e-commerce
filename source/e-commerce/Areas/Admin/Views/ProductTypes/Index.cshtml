@using e_commerce.Models;
@model IEnumerable<ProductTypes>

@{
    ViewData["Title"] = "Категория";
}


<br />
<br />

<div class="row">

    <div class="col-6">
        <h2 class="text-info">Список категорий</h2>
    </div>
    <div class="col-6 text-info-rigth">
        <a asp-action="Create" class="btn btn-info">&nbsp; Новая категория</a>
    </div>

</div>

<div>

    <table class="table table-striped border">

        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(expression: c => c.ProductType)
            </th>
            <th></th>
            <th></th>
        </tr>

         @foreach (var item in Model)
         {
          <tr>
              <td>@item.ProductType</td>
              <td>
                  <a asp-action="Edit"    asp-controller="ProductType" class="btn btn-primary" asp-route-id="@item.Id">Редактировать</a>
                  <a asp-action="Details" asp-controller="ProductType" class="btn btn-success" asp-route-id="@item.Id">Инфо.</a>
                  <a asp-action="Delete"  asp-controller="ProductType" class="btn btn-danger"  asp-route-id="@item.Id">Удалить</a>
              </td>
          </tr>
         }

    </table>

</div>