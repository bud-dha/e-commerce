@model e_commerce.Models.ProductTypes
@{
    ViewData["Title"] = "Редактировать";
}

<br />

<h2 class="text-info">Редактрировать категорию</h2>

<form asp-action="Edit" method="post">

    <div class="p-4 rounded border">

        <input type ="hidden" asp-for="Id"/>

        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>

        <div class="col-2">
            <label asp-for="ProductType"></label>
        </div>
        <div class="col-5">
            <input asp-for="ProductType" class="form-control" />
        </div>

        <span asp-validation-for="ProductType" class="text-danger"></span>

    </div>

    <div>
        <input type="submit" class="btn btn-primary" value="Обновить" />
        <a asp-action="Index" class="btn btn-success">Вернуться к списку</a>
    </div>

</form>
