@model e_commerce.Models.ProductTypes
@{
    ViewData["Title"] = "Удалить";
}

<br />

<h2 class="text-info" Удалить тип продукта></h2>

<form asp-action="Delete" method="post">

    <div class="p-4 rounded border">

        <input type="hidden"asp-for="Id">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="col-2">
            <label asp-for="ProductType"></label>
        </div>
        <div class="col-5">
            <input asp-for="ProductType" readonly="readonly" class="form-control" />
        </div>
        <span asp-validation-for="ProductType" class="text-danger"></span>

    </div>

    <div>
        <input type="submit" class="btn btn-danger" value="Удалить" />
        <a asp-action="Index" class="btn btn-success">Вернуться к списку</a>
    </div>

</form>