@model e_commerce.Models.ProductTypes
@{
    ViewData["Title"] = "Удалить";
}

<br />

<div class="container">

    <h2 class="text-center text-dark">Удалить категорию</h2><br/>

    <form asp-action="Delete" method="post">

        <div class="p-4 rounded border">

            <input type="hidden"asp-for="Id">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <div class="col-2">
                <label asp-for="ProductType"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductType" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="ProductType" class="text-danger"></span>

        </div><br/>

        <div>
            <input type="submit" class="btn btn-outline-dark" value="Удалить" />
            <a asp-action="Index" class="btn btn-outline-dark">Вернуться к списку</a>
        </div>

    </form>

</div>