@model e_commerce.Models.ProductTypes
@{
    ViewData["Title"] = "Добавить";
}

<br/>

<div class="container">

    <h2 class="text-center text-dark">Добавить категорию</h2><br>

    <form asp-action="Create" method="post">

        <div class="p-4 rounded border">

            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>

            <div class="form-group-row">
                <div class="col-2">
                    <label asp-for="ProductType"></label>
                </div>
                <div class="col-5">
                    <input asp-for="ProductType" class="form-control"/>
                </div>
                <span asp-validation-for="ProductType" class="text-danger"></span>    
             </div>
        
        </div><br/>

        <div>
            <input type ="submit" class="btn btn-outline-dark" value="Сохранить"/>
            <a asp-action="Index" class="btn btn-outline-dark">Вернуться к списку</a>
        </div>

    </form>

</div>
